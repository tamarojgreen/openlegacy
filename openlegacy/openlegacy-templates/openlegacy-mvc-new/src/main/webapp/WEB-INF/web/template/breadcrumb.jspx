<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" 
	version="2.0">
	<jsp:directive.page contentType="text/html;charset=UTF-8" pageEncoding="UTF-8" /> 
	<jsp:output omit-xml-declaration="yes" /> 

	
	<c:set var="seperator" value="&gt;" />
	<c:if test="${openLegacyProperties.rightToLeft}">
		<c:set var="seperator" value="&lt;" />
	</c:if>
	<div class="breadcrumbs">
		<ul>
			<c:forEach items="${breadCrumb}" var="pathItem" varStatus="rowCounter">
				<li>
					<c:choose>
						<c:when test="${!rowCounter.last}">
							<c:choose>
								<c:when test="${openLegacyProperties.rightToLeft}">
									<span class="breadcrumb_separator">${seperator}</span> <a href="${pageContext.request.contextPath}/${pathItem.entityName}">${pathItem.displayName}</a>
								</c:when>
								<c:otherwise>
									<a href="${pageContext.request.contextPath}/${pathItem.entityName}">${pathItem.displayName}</a> <span class="breadcrumb_separator">${seperator}</span>
								</c:otherwise>
							</c:choose>
						</c:when>
						<c:otherwise>
	 						${pathItem.displayName}
						</c:otherwise>
					</c:choose>
				</li>
			</c:forEach>
		</ul>
	</div>
</jsp:root>