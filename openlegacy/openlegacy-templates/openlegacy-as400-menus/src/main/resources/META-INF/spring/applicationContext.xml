 	<util:map id="ipDevice">
		<!-- example of set device for IP - add more (ipV4 and ipV6 style)
   		<entry key="127.0.0.1" value="device1" />
		<entry key="0:0:0:0:0:0:0:1" value="device2" />
		-->
