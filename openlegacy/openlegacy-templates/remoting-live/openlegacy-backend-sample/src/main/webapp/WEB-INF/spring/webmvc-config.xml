	<bean id="screenEntitiesRegistryExporter" name="/ScreenEntitiesRegistryService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="screensRegistry"/>
		<property name="serviceInterface" value="org.openlegacy.terminal.services.ScreenEntitiesRegistry"/>
	</bean>
	
	
	<bean id="remotingBackendScreensRestController" class="org.openlegacy.remoting.web.backend.DefaultRemotingBackendScreensRestController">
		<property name="terminalSession" ref="terminalSession"/>
	</bean>
	
	<bean id="remotingBackendScreensRestControllerExporter" name="/RemotingBackendScreensRestController" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="remotingBackendScreensRestController"/>
		<property name="serviceInterface" value="org.openlegacy.remoting.web.backend.RemotingBackendScreensRestController"/>
	</bean>
	
