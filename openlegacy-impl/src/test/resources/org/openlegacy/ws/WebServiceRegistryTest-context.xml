<!-- 		</jaxws:serviceBean> -->
<!-- 	</jaxws:server>	 -->	

 	<bean id="itemDetailsImpl" class="org.openlegacy.ws.WebService"/>
 		 
<!-- 	<jaxws:endpoint id="itemDetails" implementor="#itemDetailsImpl" address="http://localhost:9090/service/" />	 -->
		
	<bean id="proxy"
		class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">				
		<property name="beanNames">
			<list>
				<value>*Impl</value>
			</list>
		</property>
		<property name="interceptorNames">
			<list>
				<value>wsCache</value>
			</list>
		</property>
	</bean>
 	
	<context:annotation-config />
</beans>
